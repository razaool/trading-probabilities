# Environment Configuration for Historical Pattern Analysis Tool

# Authentication
# Set to 'true' to require API key authentication
REQUIRE_AUTH=false

# Comma-separated list of valid API keys (only used if REQUIRE_AUTH=true)
# Example: API_KEYS=test-key-123,prod-key-456,my-secret-key
API_KEYS=

# Rate Limiting
# Set to 'false' to disable rate limiting (not recommended for production)
ENABLE_RATE_LIMIT=true

# Maximum requests per minute per IP address
RATE_LIMIT_PER_MINUTE=10

# Burst size for rate limiting
RATE_LIMIT_BURST=20

# Database
# Default: sqlite:///./data/trading_patterns.db
# For production, consider PostgreSQL: postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///./data/trading_patterns.db

# CORS Origins (comma-separated)
# IMPORTANT: For production, set this to your actual frontend domain(s)
# Example: CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# WARNING: Never use ["*"] in production - it allows any website to call your API
# For local development, use: http://localhost:3000,http://localhost:5173
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Data Cache
DATA_CACHE_ENABLED=true
DATA_CACHE_TTL=86400
